<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_details_wrapper_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/competitors_wrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/team_home_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="15dp">
                <ImageView
                    android:id="@+id/team_home_logo"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.5" />
                <TextView
                    android:id="@+id/team_home_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/team_home_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/team_away_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/team_away_logo"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.5" />
                <TextView
                    android:id="@+id/team_away_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/team_away_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/vertical_divider"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="live"/>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>
</LinearLayout>