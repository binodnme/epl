<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_details_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/competitors_wrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/competitor_A_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="15dp">
                <ImageView
                    android:id="@+id/competitor_A_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/manchester_city"/>
                <TextView
                    android:id="@+id/competitor_A_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="Arsenal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/competitor_B_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/competitor_B_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/manchester_united"/>
                <TextView
                    android:id="@+id/competitor_B_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="Manchester United"/>
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/vertical_divider"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:text="Sat, 2/27\n6:30 PM"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>
</LinearLayout>